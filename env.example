# Stock Recommender Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===================
# Application
# ===================
APP_ENV=
LOG_LEVEL=

# ===================
# Database
# ===================
DB_HOST=
DB_PORT=
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_SSLMODE=

# ===================
# Server
# ===================
SERVER_PORT=

# ===================
# LLM Configuration
# ===================
# Provider options: ollama, openai, gemini
LLM_PROVIDER=

# Ollama (Local LLM - recommended for privacy)
OLLAMA_URL=
OLLAMA_MODEL=

# OpenAI (requires API key)
OPENAI_API_KEY=
OPENAI_MODEL=

# Google Gemini (requires API key)
GEMINI_API_KEY=
GEMINI_MODEL=

# ===================
# Analysis Settings
# ===================
USE_LLM=true
USE_KEYWORD_SENTIMENT=true
