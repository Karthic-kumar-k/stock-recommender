# Stock Recommender Environment Configuration
# Copy this file to .env and customize as needed

# ===================
# Application
# ===================
APP_ENV=development
LOG_LEVEL=debug

# ===================
# Database
# ===================
# Note: DB_HOST is automatically set to 'postgres' in Docker
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=stock_recommender
DB_SSLMODE=disable

# ===================
# Server
# ===================
SERVER_PORT=8081

# ===================
# LLM Configuration
# ===================
# Provider options: ollama, openai, gemini
LLM_PROVIDER=ollama

# Ollama (Local LLM - runs in Docker)
# Note: OLLAMA_URL is automatically set to 'http://ollama:11434' in Docker
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# OpenAI (requires API key)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Google Gemini (requires API key)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# ===================
# Analysis Settings
# ===================
USE_LLM=true
USE_KEYWORD_SENTIMENT=true
